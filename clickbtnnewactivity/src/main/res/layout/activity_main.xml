<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/enigma_background">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/normal_runes"
            android:layout_weight="2"
            android:layout_width="76dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/normal_runes" />

        <ImageView
            android:id="@+id/gold_rune"
            android:layout_weight="2"
            android:layout_width="91dp"
            android:layout_height="121dp"
            app:srcCompat="@drawable/gold_rune" />

        <ImageView
            android:id="@+id/neutral"
            android:layout_weight="2"
            android:layout_width="83dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/neutral" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/roshan_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/linear"
        android:layout_centerHorizontal="true"
        android:background="@null"
        app:srcCompat="@drawable/roshan" />

</RelativeLayout>